{
  "name": "declarative-js",
  "version": "3.0.10",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "Pavel Surinin <pavel.surinin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pavel-surinin/declarative-js.git"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "coveralls": "3.0.1",
    "jest": "23.5.0",
    "ts-jest": "23.1.3",
    "tslint": "5.10.0",
    "typescript": "2.8.3"
  },
  "scripts": {
    "compile": "tsc -d",
    "lint": "tslint -c tslint.json -p tsconfig.json -t stylish",
    "test": "jest -c jest.config.js",
    "test:coverage": "npm test -- --coverage",
    "build": "npm run lint && npm run compile && npm run test:coverage",
    "pre-publish": "npm run build && cp package.json target/out/package.json && cp README.md target/out/README.md",
    "publish:patch": "npm version patch && npm run pre-publish && npm publish target/out"
  }
}
